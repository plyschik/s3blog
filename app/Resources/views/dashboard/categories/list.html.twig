{% extends ':dashboard:layout.html.twig' %}

{% block content %}
    {% if not categories %}
        <div class="alert alert-info">{{ 'dashboard.categories.list.lack'|trans }}</div>
    {% else %}
        <table class="table table-striped">
            <tr>
                <th>{{ 'dashboard.categories.list.id'|trans }}</th>
                <th>{{ 'dashboard.categories.list.name'|trans }}</th>
                <th>{{ 'dashboard.categories.list.createdAt'|trans }}</th>
                <th>{{ 'dashboard.categories.list.management'|trans }}</th>
            </tr>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>{{ category.createdAt|date('d-m-Y H:i:s') }}</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="{{ path('dashboard.categories.edit', { id: category.id }) }}">{{ 'dashboard.categories.list.edit'|trans }}</a>
                        <a class="btn btn-sm btn-danger" href="{{ path('dashboard.categories.delete', { id: category.id }) }}">{{ 'dashboard.categories.list.delete'|trans }}</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    {% endif %}
{% endblock %}