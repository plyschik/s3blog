{% extends ':dashboard:layout.html.twig' %}

{% block content %}
    {{ form_start(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">{{ 'dashboard.post.edit.header'|trans }}</h3>
            </div>
            <div class="panel-body">
                {{ form_widget(form) }}
            </div>
            <div class="panel-footer">
                <button class="btn btn-primary" type="submit">{{ 'dashboard.post.form.edit.submit'|trans }}</button>
                <a class="btn btn-default" href="{{ path('dashboard.posts.list') }}">{{ 'dashboard.buttons.cancel'|trans }}</a>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}