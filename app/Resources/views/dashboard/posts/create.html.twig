{% extends ':dashboard:layout.html.twig' %}

{% block header %}{{ 'dashboard.post.create'|trans }}{% endblock %}

{% block content %}
    {{ form_start(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{ 'dashboard.post.create.header'|trans }}</h3>
        </div>
        <div class="panel-body">
            {{ form_widget(form) }}
        </div>
        <div class="panel-footer">
            <button class="btn btn-primary" type="submit">{{ 'dashboard.post.form.create.submit'|trans }}</button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}