{% extends ':dashboard:layout.html.twig' %}

{% block content %}
    {% for post in posts %}
        <div class="panel panel-default">
            <div class="panel-heading">
                {{ post.datetime|date('d-m-Y H:i:s') }} - {{ post.title }}
            </div>
            <div class="panel-body">
                {{ post.content }}
                <hr>
                <a class="btn btn-sm btn-primary" href="{{ path('dashboard.posts.edit', { id: post.id }) }}">Edytuj</a>
                <a class="btn btn-sm btn-danger" href="{{ path('dashboard.posts.delete', { id: post.id }) }}">Usu≈Ñ</a>
            </div>
            <div class="panel-footer">
                Dodane przez: {{ post.user.getFullName() }}, dnia: {{ post.createdAt|date('d-m-Y H:i:s') }}. Ostatnia aktualizacja: {{ post.updatedAt|date('d-m-Y H:i:s') }}.
            </div>
        </div>
    {% endfor %}
{% endblock %}