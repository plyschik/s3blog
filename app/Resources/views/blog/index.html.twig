{% extends ':blog:layout.html.twig' %}

{% block content %}
    {% for post in posts %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <a href="{{ path('blog.post', { slug: post.slug, id: post.id }) }}">{{ post.title }}</a>
                </h3>
            </div>
            <div class="panel-body">
                {{ post.content }}
            </div>
            <div class="panel-footer">
                {{ post.user.getFullName() }} / {{ post.datetime|date('d-m-Y H:i') }} / <a href="{{ path('blog.category', { 'id': post.category.id }) }}">{{ post.category.name }}</a> /
                {% for tag in post.tags %}
                    <a href="{{ path('blog.tag', { id: tag.id }) }}"><span class="label label-default">{{ tag.name }}</span></a>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
{% endblock %}